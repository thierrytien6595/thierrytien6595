<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".QUANLYNHANVIEN.ThemNVFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ MỚI"
        android:id="@+id/title1"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_manv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:text="Mã NV: "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/manv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:isScrollContainer="false"
            android:keepScreenOn="false"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tennhanvien"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:text="Tên : "
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tennhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Nhập tên thôi. VD: TIẾN"
            android:inputType="text"
            android:isScrollContainer="false"
            android:keepScreenOn="false"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_luong"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lương : "
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/luongnhanvien"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:hint="VD: 17000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sdt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SĐT : "
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdt"
            android:layout_margin="10dp"
            android:inputType="phone"
            android:textSize="20sp"
            android:hint="VD: 0358228318" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_luu"
        android:text="LƯU"
        android:onClick="onbtnClick"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
</LinearLayout>